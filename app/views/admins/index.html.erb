    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.bookTitle %></td>
    
   
    <td><%= book.userName %></td>
    
    <td><%= book.dueDate %></td>
    

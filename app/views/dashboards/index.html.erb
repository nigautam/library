<% @books.each do |book| %>
	<% if book.userName == current_user.email%>
  <tr>
    <td><%= book.bookTitle %></td>
    <td><%= book.author %></td>
    <td><%= book.isbn %></td>
    <td><%= book.signOutDate %></td>
   <td><%= book.dueDate %></td>
    <td><%= book.lateFee %></td>
    
    
    
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
<% end%>
